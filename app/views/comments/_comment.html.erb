<div class="comment" id="<%= dom_id(comment) %>">
  <div class="comment-avatar">
    <% if comment.user.avatar.attached? %>
      <%= image_tag comment.user.avatar.representation(resize_to_fill: [180, 180]).processed.url, loading: 'lazy' %>
    <% end %>
  </div>
  <p class="comment-name"><%= comment.user.email %></p>
  <p class="comment-content"><%= comment.content %></p>
  <% if current_user.id == comment.user_id %>
    <%= link_to 'Delete', comment_path(comment.id), data: {
    turbo_method: :delete,
    turbo_confirm: 'Are you sure you wan to delete your comment?' } %>
  <% end %>
</div>
