<div class="post-interaction-buttons">
  <div class="post-like-unlike-form">
    <%= turbo_frame_tag dom_id(post, 'like_unlike_button') do %>
      <%= render 'post_like_unlike_button', post: %>
    <% end %>
  </div>

  <button type="button" class="comments-toggle"  data-action="click->comment#toggleVisibility" id="<%= dom_id(post, 'comments_toggle') %>">
    <%= pluralize(post.comments.length, 'Comment') %>
  </button>
</div>
